<body class="default">

  <div class="spacer-div"></div>

  <div class="col-md-6 col-centered">

    <h2> Responde la pregunta </h2>
    <p class="label label-default"> Puede que no sea divertido</p>
    <div class="spacer-min"></div>

    <%= form_for @question do |q| %>

      <%= q.text_field :question, readonly:true, class:"form-control" %>

      <%= q.text_area :answer, value:"", placeholder:@question.answer, class:"form-control" %>

      <%= q.submit "Responder", class:"btn btn-primary" %>

    <% end %>

  </div>

</body>
