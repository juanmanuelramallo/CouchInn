<body class="default">

<% if current_user.admin? %>

  <div class="col-md-8 col-centered">

    <h2> Resumen de ganancias <span class="label label-default"> $$$ </span> </h2>

    <div class="spacer-div"></div>

     <%= form_tag(payments_main_path, :method => "get", id: "search-form") do %>

        <%= label_tag :from, "Desde", class:"label label-default" %>
        <div class="spacer-min"></div>
        <%= text_field_tag :from, params[:from], class:"form-control", placeholder: "Desde" , class: 'datepicker' %>

        <%= label_tag :to, "Hasta", class:"label label-default" %>
        <div class="spacer-min"></div>
        <%= text_field_tag :to, params[:to], class:"form-control", placeholder: "Hasta" , class: 'datepicker' %>

        <div class="spacer-min"></div>

        <button class="btn btn-default" type="submit"> Ver resumen 🔍</button>

    <% end %>

  </div>

<% else %>

  <h4> No tienes los permisos para ver esta página </h4>

<% end %>

</body>
