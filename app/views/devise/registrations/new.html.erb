<script type="text/javascript">

$(document).ready(function() {

$('#sandbox-container input').datepicker({
    orientation: "bottom auto"
});
});
</script>

<body class="new-user">

<div style="padding-top:30px; scrollable:false"></div>

<div class="col-lg-4 col-centered">
<h3><span class="label label-default">Registrarme</span></h3>
</div>

<div style="padding-top:0px"></div>


<%= form_for @user, as: :user, url: registration_path(@user) do |f| %>

<div class="row">


<div class="col-lg-4 col-centered">

  <% if !devise_error_messages!.blank? %>
    <div class="alert alert-danger">
    <%= devise_error_messages! %>
    </div>
  <% end %>

 <div class="spacer-div"></div>


  <div class="input-group">

    <span class="input-group-addon" id="basic-addon3">😏</span>
    <%= f.text_field :nombre, autofocus: true, class:"form-control", placeholder:"Nombre"%>

  </div>


  <div class="spacer-div"></div>


  <div class="input-group">

    <span class="input-group-addon" id="basic-addon4">😁</span>
    <%= f.text_field :apellido, class:"form-control", placeholder:"Apellido"%>

  </div>


  <div class="spacer-div"></div>


  <div class="input-group">

    <span class="input-group-addon" id="basic-addon1">📅</span>

    <%= f.text_field :fecnac, 'data-provide':"datepicker",  'data-date-format':"dd/mm/yyyy",class:"form-control", placeholder:"Cumpleaños - dd/mm/yyyy"%>

  </div>


  <div class="spacer-div"></div>


  <div class="input-group">

    <span class="input-group-addon" id="basic-addon1">📧</span>
    <%= f.email_field :email, class:"form-control", placeholder:"miEmail@loquesea.com"%>

  </div>


  <div class="spacer-div"></div>


  <div class="input-group">

    <span class="input-group-addon" id="basic-addon2">🔑</span>
    <%= f.password_field :password, autocomplete: "off", class:"form-control", placeholder:"Esto es secreto y mínimo 6 caracteres" %>

  </div>

  <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> caracteres mínimo)</em>
    <% end %><br />


  <div class="spacer-div"></div>


  <div class="input-group">

    <span class="input-group-addon" id="basic-addon2">🔑</span>
    <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control", placeholder:"Repetir la contraseña" %>

  </div>


  <div class="spacer-div"></div>


  <div>
    <%= f.submit "Registrarme", class:"btn btn-success btn-block"%>
  </div>

  </div>

</div> <!-- ROW -->

<% end %>


<div style="padding-top:20px"></div>

<div class="col-lg-4 col-centered">
<%= render "devise/shared/links" %>
</div>

<div style="padding-top:60px"></div>

</body>
