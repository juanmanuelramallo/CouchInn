<body class="edit-user">

<div class="col-md-6 col-centered">

  <h3> Editar mi perfil </h3>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

    <% if !devise_error_messages!.blank? %>
      <div class="alert alert-danger">
        <%= devise_error_messages! %>
      </div>
    <% end %>


    <div class="form-group">

      <%= f.label :avatar, "Foto de perfil", class:"label label-default"%>
      <div class="w-label">
        <%= f.file_field :avatar, class:"btn btn-default btn-block btn-file" %>
      </div>

    </div>


    <%= f.label "Nombre", class:"label label-default" %><br />
    <div class="spacer-min"></div>
    <div class="input-group">
      <span class="input-group-addon" id="basic-addon1">😏</span>
      <%= f.text_field :nombre, class:"form-control" , autofocus: true %>
    </div>


    <div class="spacer-div"></div>

    <%= f.label "Apellido", class:"label label-default" %><br />
    <div class="spacer-min"></div>
    <div class="input-group">
      <span class="input-group-addon" id="basic-addon1">😁</span>
      <%= f.text_field :apellido, class:"form-control"%>
    </div>


    <div class="spacer-div"></div>


    <div class="row">

    <div class="col-md-6">

      <%= f.label "Fecha de nacimiento", class:"label label-default" %><br />
      <div class="spacer-min"></div>
      <div class="input-group">
        <span class="input-group-addon" id="basic-addon1">📅</span>
        <%= f.text_field :fecnac, 'data-provide':"datepicker",  'data-date-format':"dd/mm/yyyy",class:"form-control", type:"text", placeholder:"Mi cumpleaños"%>
      </div>

    </div>

    <div class="col-md-6">

      <%= f.label :genero, class:"label label-default" %><br />
      <div class="spacer-min"></div>
      <div class="input-group">
        <span class="input-group-addon" id="basic-addon1">🚶💃</span>
        <%= f.select(:genero, ["Masculino", "Femenino","Secreto"], {}, { :genero => "genero", class:"form-control" }) %>
      </div>

    </div>

    </div>


    <div class="spacer-div"></div>


    <%= f.label "Teléfono", class:"label label-default" %><br />
    <div class="spacer-min"></div>
    <div class="input-group">
      <span class="input-group-addon" id="basic-addon1">📞</span>
      <%= f.text_field :telf, class:"form-control"%>
    </div>


    <div class="spacer-div"></div>


    <%= f.label "País", class:"label label-default" %><br />
    <div class="spacer-min"></div>
    <div class="input-group">
      <span class="input-group-addon" id="basic-addon1">🇦🇷</span>
      <%= f.country_select :pais, priority_countries = ["Argentina", "Bolivia", "Brasil", "Chile", "Colombia", "Ecuador", "Paraguay", "Perú", "Uruguay", "Venezuela"], options = {}, html_options = {class:"form-control" } %>
    </div>


    <div class="spacer-div"></div>


    <%= f.label "Ciudad", class:"label label-default" %><br />
    <div class="spacer-min"></div>
    <div class="input-group">
      <span class="input-group-addon" id="basic-addon1">🇦🇷</span>
      <%= f.text_field :ciudad, class:"form-control"%>
    </div>


    <div class="spacer-div"></div>


    <%= f.label :email, class:"label label-default" %><br />
    <div class="spacer-min"></div>
    <div class="input-group">
      <span class="input-group-addon" id="basic-addon1">📧</span>
      <%= f.email_field :email, class:"form-control"%>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>


    <div class="spacer-div"></div>


    <%= f.label "Contraseña", class:"label label-default" %> <i>(dejar en blanco si no querés cambiar)</i>
    <div class="spacer-min"></div>
    <div class="input-group">
      <span class="input-group-addon" id="basic-addon2">🔑</span>
      <%= f.password_field :password, class:"form-control" ,autocomplete: "off" %>
    </div>


    <div class="spacer-div"></div>


    <%= f.label "Confirmación de contraseña", class:"label label-default" %>
    <div class="spacer-min"></div>
    <div class="input-group">
      <span class="input-group-addon" id="basic-addon2">🔑</span>
      <%= f.password_field :password_confirmation, class:"form-control" ,autocomplete: "off" %>
    </div>


    <div class="spacer-div"></div>


    <%= f.label "Contraseña actual", class:"label label-default" %> <i>(Necesitamos tu contraseña actual para confirmar los cambios)</i>
    <div class="spacer-min"></div>
    <div class="input-group">
      <span class="input-group-addon" id="basic-addon2">🔑</span>
      <%= f.password_field :current_password, class:"form-control", autocomplete: "off" %>
    </div>


    <div class="spacer-div"></div>


    <div class="actions">
      <%= f.submit "Actualizar", class:"btn btn-primary btn-block" %>
    </div>
  <% end %>


  <div class="spacer-div"></div>

  <div>.</div>
  <div>.</div>


</div>


</body>
