<script type="text/javascript">

$(document).ready(function() {

  $('#sandbox-container input').datepicker({
      orientation: "bottom auto"
  });

  $('.datepicker').datepicker({
          format: "dd/mm/yyyy",
          orientation: "bottom auto",
          autoclose: true
      });

});
</script>

<%= form_for @reserva do |f| %>

  <% if !params[:reservation].nil? %>
    <%= f.hidden_field :couch_id, value: params[:reservation][:couch_id]%>
  <% else %>
    <%= f.hidden_field :couch_id, value: params[:couch_id] %>
  <% end %>

  <div class="form-group">
    <%= f.label :start_date,"Fechad de inicio",class:"label label-default", type:"label", :for=>'start_date' %>
    <div class="w-label">
      <%= f.text_field :start_date,class:"form-control datepicker", 'data-date-format':"dd/mm/yyyy" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :end_date, "Fecha de finalizacion",class:"label label-default", type:"label", :for=>'end_date' %>
    <div class="w-label">
      <%= f.text_field :end_date, class:"form-control datepicker", 'data-date-format':"dd/mm/yyyy" %>
    </div>
  </div>


  <div class="form-actions">
          <%= f.submit "Aceptar", class:"btn btn-primary" %>
          <%= link_to "Cancelar", :back , class:"btn btn-default" %>
    </div>

<% end %>
