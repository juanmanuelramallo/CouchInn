<div class="col-md-6 col-centered">

<h1><span class="label label-default"> Buscar un couch </span></h1>

<div class="spacer-div"></div>


<% if @search && @search.errors.any? %>
<div class="alert alert-danger">
  <% @search.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
</div>
<% end %>


<%= form_for @search do |s|%>

  <script type="text/javascript">

  $(function () {

    var $ctipo = $('[id^="enable-tipo"]'),
        $stipo = $('#select-tipo'),

        $cub = $('[id^="enable-ubic"]'),
        $tfubic = $('#tf-ubic')

        $ccap = $('[id^="enable-cap"]'),
        $tfcap = $('#tf-cap')
        ;

      $ctipo.change(function (e) {
          $stipo.prop('disabled', !$ctipo.is(':checked'))
      });

      $cub.change(function (e) {
        $tfubic.prop('disabled', !$cub.is(':checked'))
      });

      $ccap.change(function (e) {
        $tfcap.prop('disabled', !$ccap.is(':checked'))
      });

});

</script>



  <%= s.label :tipo %>
  <div class="input-group">
    <span class="input-group-addon">
      <%= check_box "enable-tipo", id:"enable-tipo" %>
    </span>
    <%= s.select :tipo, options_for_select(tipos_array_search), {}, class:"form-control no-radius-left", id:"select-tipo", disabled: true %>
  </div>

  <div class="spacer-min"></div>

  <%= s.label :ubicacion_cont, "Ubicación" %>
  <div class="input-group">
    <span class="input-group-addon">
      <%= check_box "enable-ubic", id:"enable-ubic"%>
    </span>
    <%= s.text_field :ubicacion_cont, class:"form-control", id:"tf-ubic" ,placeholder:"Palabras claves de la ubicación", disabled: true %>
  </div>

  <div class="spacer-min"></div>

  <%= s.label :capacidad, "Capacidad" %>
  <div class="input-group">
    <span class="input-group-addon">
      <%= check_box "enable-cap", id:"enable-cap" %>
    </span>
    <%= s.number_field :capacidad, class:"form-control", id:"tf-cap" ,placeholder:"Ingresar un número", disabled: true %>
  </div>

  <div class="spacer-div"></div>

  <%= s.submit "Buscar", class:"btn btn-primary" %>

<% end %>

<div class="spacer-div"></div>

<div class="well wel-sm">
<p> Para buscar un couch, marcá las casillas correspondientes a los campos con los que querés buscar </p>
</div>

</div>
